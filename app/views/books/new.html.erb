<h1> The New Book <h1>

<% if @book.errors.any? %>
    <h2> Check This Errors !!</h2>
    <ul>
        <% @book.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
        <%end%>
    </ul>
    <%end%>


<%= form_for @book do |f| %>
    <p>
        <%= f.label :name %> <br/>
        <%= f.text_field :name %>
    </p>

    <p>
        <%= f.label :about %> <br/>
        <%= f.text_area :about %>
    </p>

    <p>
        <%= f.submit %>
    </p>

<% end %>    
