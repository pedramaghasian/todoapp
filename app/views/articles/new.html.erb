<h1> This is new action </h1>

<% if @article.errors.any?%>
  <h2> We have an errors! </h2>

  <ul>
    <% @article.errors.full_messages.each do |msg|%>
      <li><%=msg%></li>
    </ul>
  <%end%>
<%end%>
<%= form_for @article do |f|%>
  <p>
    <%= f.label :title%><br/>
    <%= f.text_field :title%>
  </p>

  <p>
    <%= f.label :about%><br/>
    <%= f.text_area :about%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<%end%>