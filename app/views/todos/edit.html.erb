<h1> This is Edit Page <h1>

<% if @todo.errors.any?%>
  <ul>
    <h2> Solve this following Errors! </h2>
    <% @todo.errors.full_messages.each do |m|%>
      <li><%= msg%></li>
    <%end%>
  </ul>
<%end%>    


<%= form_for @todo do |f| %>
  <p>
    <%= f.label :name %><br/>
    <%= f.text_field :name %>
  </p>

  <p>
    <%= f.label :description%><br/>
    <%= f.text_area :description%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<%end%>