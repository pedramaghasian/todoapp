<h1> This is Edit for Books </h1>

<% if @book.errors.any?%>
  <ul>
    <% @book.errors.full_messages.each do |m|%>
      <li><%= m%></li>
    <%end%>
  </ul>
<%end%>

<%= form_for @book do |f|%>
  <p>
    <%= f.label :name%><br/>
    <%= f.text_field :name%>
  </p>

  <p>
    <%= f.label :about%><br/>
    <%= f.text_area :about%>
  </p>

  <p>
    <%= f.submit%>
  </p>
<%end%>  